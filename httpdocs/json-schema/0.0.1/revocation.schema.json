{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://directdemocracy.vote/json-schema/0.0.1/revocation.schema.json",
	"title": "revocation",
	"description": "revokes a card or an endorsement",
	"type": "object",
	"required": [
		"schema",
		"key",
		"signature",
		"published",
		"expires",
		"revoked"
	],
	"properties": {
		"schema": {
			"const": "https://directdemocracy.vote/json-schema/0.0.1/endorsement.schema.json"
		},
		"key": {
			"description": "public key of the endorser",
			"type": "string"
		},
		"signature": {
			"description": "signature of the endorser",
			"type": "string"
		},
		"published": {
			"description": "date of publication of the revocation",
			"type": "string",
			"format": "date-time"
		},
		"expires": {
			"description": "date at which this publication expires",
			"type": "string",
			"format": "date-time"
		},
		"revoked": {
			"description": "revoked publication",
			"type": "object",
			"required": ["key"],
			"properties": {
				"key": {
					"type": "string"
				},
				"signature": {
					"type": "string"
				}
			}
		},
		"message": {
			"description": "message encrypted with the public key of the revoked publication",
			"type": "string"
		},
		"comment": {
			"description": "free comment",
			"type": "string"
		}
	}
}
