{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://directdemocracy.vote/json-schema/0.0.1/voter.schema.json",
	"title": "voter",
	"description": "citizen who voted in a referendum",
	"type": "object",
	"required": [
		"schema",
		"key",
		"signature",
		"published",
		"expires",
		"referendum",
		"station"
	],
	"properties": {
		"schema": {
			"const": "https://directdemocracy.vote/json-schema/0.0.1/voter.schema.json"
		},
		"key": {
			"description": "public key of the station",
			"type": "string"
		},
		"signature": {
			"description": "signature of the station",
			"type": "string"
		},
		"published": {
			"description": "date of publication (milliseconds since 1970-01-01 00:00:00.000)",
			"type": "integer",
			"minimum": 0,
			"maximum": 999999999999999
		},
		"expires": {
			"description": "date at which this publication expires (milliseconds since 1970-01-01 00:00:00.000)",
			"type": "integer",
			"minimum": 0,
			"maximum": 999999999999999
		},
		"referendum": {
			"type": "object",
			"required": ["key", "signature"],
			"properties": {
				"key": {
					"description": "public key of the citizen author of the referendum",
					"type": "string"
				},
				"signature": {
					"description": "citizen signature for the referendum",
					"type": "string"
				}
			}
		},
		"station": {
			"description": "station used by the citizen to cast her vote",
			"type": "object",
			"required": ["key", "signature"],
			"properties": {
				"key": {
					"description": "public key of the station",
					"type": "string"
				},
				"signature": {
					"description": "station signature for the voter publication",
					"type": "string"
				}
			}
		},
		"vote": {
			"description": "vote of the citizen",
			"type": "object",
			"required": ["key", "signature", "refused"],
			"properties": {
				"key": {
					"description": "public key of the vote",
					"type": "string"
				},
				"signature": {
					"description": "vote signature for the voter publication",
					"type": "string"
				},
				"refused": {
					"description": "voter refusal reason written by the station",
					"type": "string"
				}
			}
		}
	},
  "additionalProperties": false
}
