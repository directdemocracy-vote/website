{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://directdemocracy.vote/json-schema/0.0.1/voter.schema.json",
	"title": "voter",
	"description": "citizen who voted in a referendum",
	"type": "object",
	"required": [
		"schema",
		"key",
		"signature",
		"published",
		"referendum",
		"citizen"
	],
	"properties": {
		"schema": {
			"const": "https://directdemocracy.vote/json-schema/0.0.1/voter.schema.json"
		},
		"key": {
			"description": "public key of the station",
			"type": "string",
			"contentEncoding": "base64"
		},
		"signature": {
			"description": "signature of the station",
			"type": "string",
			"contentEncoding": "base64"
		},
		"published": {
			"description": "date at which the voter was published",
			"type": "string",
			"format": "date-time"
		},
		"referendum": {
			"type": "object",
			"required": ["key", "signature"],
			"properties": {
				"key": {
					"description": "public key of the referendum",
					"type": "string",
					"contentEncoding": "base64"
				},
				"signature": {
					"description": "signature of the referendum",
					"type": "string",
					"contentEncoding": "base64"
				}
			}
		},
		"citizen": {
			"description": "citizen who voted at this referendum",
			"type": "object",
			"required": ["key", "signature"],
			"properties": {
				"key": {
					"description": "public key of the referendum",
					"type": "string",
					"contentEncoding": "base64"
				},
				"signature": {
					"description": "signature of the referendum",
					"type": "string",
					"contentEncoding": "base64"
				}
			}
		}
	}
}
