{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://directdemocracy.vote/json-schema/2/vote.schema.json",
  "title": "vote",
  "description": "vote of a citizen to a referendum",
  "type": "object",
  "required": [
    "schema",
    "key",
    "signature",
    "published",
    "number",
    "answer"
  ],
  "properties": {
    "schema": {
      "const": "https://directdemocracy.vote/json-schema/2/vote.schema.json"
    },
    "key": {
      "description": "public blind key of the station",
      "type": "string",
      "maxLength": 512
    },
    "signature": {
      "description": "unblinded signature of the station",
      "type": "string",
      "maxLength": 512
    },
    "published": {
      "description": "current date (milliseconds since 1970-01-01 00:00:00.000)",
      "type": "integer",
      "minimum": 0,
      "maximum": 999999999999999
    },
    "number": {
      "description": "unique ballot number generated by the app",
      "type": "string"
    },
    "answer": {
      "description": "answer of the citizen to the referendum question",
      "type": "string"
    }
  },
  "additionalProperties": false
}