{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://directdemocracy.vote/json-schema/2/endorsement.schema.json",
  "title": "endorsement",
  "description": "claim that a participant approves or disapprove a publication",
  "type": "object",
  "required": [
    "schema",
    "key",
    "signature",
    "published",
    "endorsedSignature"
  ],
  "properties": {
    "schema": {
      "const": "https://directdemocracy.vote/json-schema/2/endorsement.schema.json"
    },
    "key": {
      "description": "public key of the endorser",
      "type": "string",
      "maxLength": 512
    },
    "signature": {
      "description": "signature of the endorser",
      "type": "string",
      "maxLength": 512
    },
    "published": {
      "description": "date of publication (seconds since 1970-01-01 00:00:00)",
      "type": "integer",
      "minimum": 0,
      "maximum": 999999999999
    },
    "appKey": {
      "description": "public key of the app used by the citizen",
      "type": "string",
      "maxLength": 512
    },
    "appSignature": {
      "description": "signature of the app",
      "type": "string",
      "maxLength": 512
    },
    "endorsedSignature": {
      "description": "signature of the endorsed publication",
      "type": "string",
      "maxLength": 512
    },
    "revoke": {
      "description": "boolean set to true to disapprove a publication and false to approve (default to false)",
      "type": "boolean"
    },
    "message": {
      "description": "message encrypted with the public key of the author of the endorsed publication",
      "type": "string"
    },
    "comment": {
      "description": "public comment",
      "type": "string"
    }
  },
  "additionalProperties": false
}
