{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://directdemocracy.vote/json-schema/0.0.2/participation.schema.json",
	"title": "registration",
	"description": "participation of a polling station in a referendum",
	"type": "object",
	"required": [
		"schema",
		"key",
		"signature",
		"published",
		"referendum",
    "participation"
	],
	"properties": {
		"schema": {
			"const": "https://directdemocracy.vote/json-schema/0.0.2/participation.schema.json"
		},
		"key": {
			"description": "public key of the citizen",
			"type": "string"
		},
		"signature": {
			"description": "signature of the citizen",
			"type": "string"
		},
		"published": {
			"description": "current date (milliseconds since 1970-01-01 00:00:00.000)",
			"type": "integer",
			"minimum": 0,
			"maximum": 999999999999999
		},
		"referendum": {
			"description": "signature of the referendum",
			"type": "string"
		},
		"participation": {
			"description": "public key of the participation issued by the station",
			"type": "string"
		}
	},
  "additionalProperties": false
}
