{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://directdemocracy.vote/json-schema/0.0.2/endorsement.schema.json",
	"title": "endorsement",
	"description": "claim that a participant approves or disapprove a publication",
	"type": "object",
	"required": [
		"schema",
		"key",
		"signature",
		"published",
		"publication"
	],
	"properties": {
		"schema": {
			"const": "https://directdemocracy.vote/json-schema/0.0.2/endorsement.schema.json"
		},
		"key": {
			"description": "public key of the endorser",
			"type": "string",
			"maxLength": 512
		},
		"signature": {
			"description": "signature of the endorser",
			"type": "string",
			"maxLength": 512
		},
		"published": {
			"description": "date of publication (milliseconds since 1970-01-01 00:00:00.000)",
			"type": "integer",
			"minimum": 0,
			"maximum": 999999999999999
		},
		"revoke": {
			"description": "boolean set to true to disapprove a publication and false to approve (default to false)",
			"type": "boolean"
		},
		"publication": {
			"description": "signature of the endorsed publication",
			"type": "string",
			"maxLength": 512
		},
		"message": {
			"description": "message encrypted with the public key of the author of the endorsed publication",
			"type": "string"
		},
		"comment": {
			"description": "public comment",
			"type": "string"
		}
	},
  "additionalProperties": false
}
