{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://directdemocracy.vote/json-schema/0.0.2/registration.schema.json",
  "title": "registration",
  "description": "registration of a citizen voting in a referendum",
  "type": "object",
  "required": [
    "schema",
    "key",
    "signature",
    "published",
    "participation",
    "encryptedVote"
  ],
  "properties": {
    "schema": {
      "const": "https://directdemocracy.vote/json-schema/0.0.2/registration.schema.json"
    },
    "key": {
      "description": "public key of the citizen",
      "type": "string",
      "maxLength": 512
    },
    "signature": {
      "description": "signature of the citizen",
      "type": "string",
      "maxLength": 512
    },
    "published": {
      "description": "current date (milliseconds since 1970-01-01 00:00:00.000)",
      "type": "integer",
      "minimum": 0,
      "maximum": 999999999999999
    },
    "participation": {
      "description": "public key of the participation issued by the station",
      "type": "string",
      "maxLength": 512
    },
    "encryptedVote": {
      "description": "vote encrypted by the citizen for blind signature by the station",
      "type": "string"
    }
  },
  "additionalProperties": false
}
